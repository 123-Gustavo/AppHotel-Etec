<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.SobreHospedagem"
             Title="SobreHospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">
    
    
    <VerticalStackLayout VerticalOptions="CenterAndExpand"
                         Padding="10"
                         Margin="5">

        <VerticalStackLayout Margin="5">
            <Grid RowDefinitions="Auto" ColumnDefinitions="Auto, Auto, Auto" ColumnSpacing="10">
                <Button Grid.Row="0" Grid.Column="0" Text="Voltar" Clicked="Button_Clicked"/>
            </Grid>
        </VerticalStackLayout>

        <Label 
        Text="Sobre a Hospedagem."
        FontFamily="Kalam"
        FontSize="30"
        HorizontalOptions="Center"
        TextColor="{StaticResource Primary}" />


        <Label 
        Text="Esse app está sendo desenvolvido como trabalho do curso de desenvolvimento de Sistemas da Etec. Pelo aluno Gustavo Fernandes Farias em 2025.
            Ele visa ser um sistema de marcar a diária em uma hospedagem. Além de mostrar o final de sua diária, em qual quarto, valor, etc. "
        FontFamily="Kalam"
        FontSize="15"
        HorizontalOptions="Center"
        TextColor="{StaticResource Gray950}" />


    </VerticalStackLayout>
</ContentPage>