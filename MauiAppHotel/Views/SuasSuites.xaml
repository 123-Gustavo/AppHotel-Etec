<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.SuasSuites"
             Title="SuasSuites"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">
    <VerticalStackLayout>
        <VerticalStackLayout Margin="5">
            <Grid RowDefinitions="Auto" ColumnDefinitions="Auto, Auto, Auto" ColumnSpacing="10">
                <Button Grid.Row="0" Grid.Column="0" Text="Voltar" Clicked="Button_Clicked"/>
            </Grid>
        </VerticalStackLayout>
        
        <Label Text="Suas Suites"  
           TextColor="{StaticResource Primary}"
           FontFamily="Kalam"
           FontSize="50"
           HorizontalTextAlignment="Center"/>
        
        <Grid ColumnDefinitions="*, *, *, *" RowDefinitions="Auto" Margin="10">
            <Label Grid.Row="0" Grid.Column="0" Text="Suite" TextColor="{StaticResource Primary}"/>
            <Label Grid.Row="0" Grid.Column="1" Text="Adultos" TextColor="{StaticResource Primary}" />
            <Label Grid.Row="0" Grid.Column="2" Text="Crianças" TextColor="{StaticResource Primary}" />
            <Label Grid.Row="0" Grid.Column="3" Text="Preço" TextColor="{StaticResource Primary}"/>
        </Grid>

        <Grid ColumnDefinitions="*, *, *, *" RowDefinitions="Auto" Margin="10">

            <Label Grid.Row="0" Grid.Column="0" Text="Suite Super Luxo" TextColor="{StaticResource Gray400}"/>
            <Label Grid.Row="0" Grid.Column="1" Text="2" TextColor="{StaticResource Gray400}" />
            <Label Grid.Row="0" Grid.Column="2" Text="2" TextColor="{StaticResource Gray400}" />
            <Label Grid.Row="0" Grid.Column="3" Text="R$ 750,00" TextColor="{StaticResource Gray400}"/>
        </Grid>

        <Grid ColumnDefinitions="*, *, *, *" RowDefinitions="Auto" Margin="10">

            <Label Grid.Row="0" Grid.Column="0" Text="Suite Super Luxo" TextColor="{StaticResource Gray400}"/>
            <Label Grid.Row="0" Grid.Column="1" Text="2" TextColor="{StaticResource Gray400}"/>
            <Label Grid.Row="0" Grid.Column="2" Text="2" TextColor="{StaticResource Gray400}" />
            <Label Grid.Row="0" Grid.Column="3" Text="R$ 750,00" TextColor="{StaticResource Gray400}" />
        </Grid>

    </VerticalStackLayout>
</ContentPage>